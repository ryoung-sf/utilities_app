<header class="shrink-0 border-b border-gray-200 bg-white">
  <div class="mx-auto flex h-16 items-center justify-between px-4 sm:px-6 lg:px-2">
    <img class="h-8 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
    <div class="flex items-center gap-x-8">
      <button type="button" class="-m-2.5 p-2.5 text-gray-400 hover:text-gray-300">
        <span class="sr-only">View notifications</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
        </svg>
      </button>
      <a href="#" class="-m-1.5 p-1.5">
        <span class="sr-only">Your profile</span>
        <img class="h-8 w-8 rounded-full bg-gray-800" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
      </a>
      <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete } %>
    </div>
  </div>
</header>


<div class="bg-kellygreen rounded-lg p-2">
  <div class="flex">
    <div class="flex lg:space-x-2">
      <div>
        <label for="bill_statement" class="hidden block text-sm font-medium leading-6 text-gray-900">Date Range</label>
        <select id="bill_statement" name="bill_statement" class="mt-2 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-100 focus:ring-2 focus:ring-seafoamgreen sm:text-sm sm:leading-6">
          <option value="" disabled selected>Select a Bill</option>
          <option>March</option>
          <option>February</option>
          <option>January</option>
        </select>
      </div>

      <div>
        <label for="utility_service" class="hidden block text-sm font-medium leading-6 text-gray-900">Service Type</label>
        <select id="utility_service" name="bill_statement" class="mt-2 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-100 focus:ring-2 focus:ring-seafoamgreen sm:text-sm sm:leading-6">
          <option value="" disabled selected>Service type</option>
          <option value="">All</option>
          <option>Electric</option>
          <option>Water</option>
          <option>Gas</option>
        </select>
      </div>
    </div>
  </div>
  <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4">
    <div class="group relative">
      <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-md bg-white lg:aspect-none group-hover:opacity-75 lg:h-80">
        <div class="p-2 flex h-full flex-col justify-between">
        <p class="text-gray-400">Statement Details</p>
          <div>
            <p>Customer Name</p>
            <p>Account: 123456890</p>
          </div>
          <div>
            <p>123 Main St <span class="block">Apt 3004</span> Anywhere, CA 12234</p>
          </div>
          <p class="text-center">Jun 1, 2024 - June 30, 2024</p>
        </div>
      </div>
    </div>
    <div class="group relative">
      <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-md bg-white  group-hover:opacity-75 lg:h-80">
        <div class="p-2 flex h-full flex-col justify-between">
        <p class="text-gray-400">Bill Details</p>
          <div class="flex justify-center">
            <span>$</span><p class="text-6xl"><%= bills.last.total_cost%></p>
            <p class="text-spearmint text-xl">6.3%</p>
          </div>
          <p class="text-center">Jun 1, 2024 - June 30, 2024</p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mx-auto mt-4 flex">
  <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:px-2">
    <div class="flex flex-col space-y-4">
