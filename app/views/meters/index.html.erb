<header class="shrink-0 border-b border-gray-200 bg-white">
  <div class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
    <img class="h-8 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
    <div class="flex items-center gap-x-8">
      <button type="button" class="-m-2.5 p-2.5 text-gray-400 hover:text-gray-300">
        <span class="sr-only">View notifications</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
        </svg>
      </button>
      <a href="#" class="-m-1.5 p-1.5">
        <span class="sr-only">Your profile</span>
        <img class="h-8 w-8 rounded-full bg-gray-800" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
      </a>
    </div>
  </div>
</header>

<div class="flex mx-auto max-w-4xl min-h-full flex-col bg-white">
  <div class="mt-4 px-2">
    <dl class="mx-auto grid grid-cols-1 sm:grid-cols-1 lg:grid-cols-3 lg:px-2 xl:px-2 lg:space-x-2 lg:space-y-2">
      <div class="flex items-baseline flex-wrap justify-between gap-y-2 gap-x-4 rounded-lg px-4 py-4 sm:px-6 border-t-2 border-b-2 xl:px-8 border-teal-400 bg-white">
        <dt class="text-sm font-medium text-xl leading-6 text-gray-900">First Name Last Name</dt>
        <dd class="text-sm w-full font-medium leading-6 text-gray-900">Street</dd>
        <dd class="text-sm w-full font-medium leading-6 text-gray-900">City, State Zip</dd>
        <dd class="text-xs font-medium leading-6 text-gray-900"><%= @meters[:body][:base][:billing_account] %></dd>
      </div>
      <div class="flex items-baseline flex-wrap justify-between gap-y-2 gap-x-4 rounded-lg px-4 py-4 sm:px-6 border-t-0 xl:px-8 bg-teal-500">
        <dt class="text-sm font-medium leading-6 text-white">Recent Bill (PDF)</dt>
        <dd class="text-xs font-medium text-rose-800">+54.02%</dd>
        <dd class="w-full flex-none text-3xl font-medium leading-10 tracking-tight text-white">$12,787.00</dd>
        <dd class="text-xs font-medium text-white">Jan 10, 2024 - Feb 09, 2024</dd>
      </div>
      <div class="flex items-baseline flex-wrap justify-between gap-y-2 gap-x-4 rounded-lg px-4 py-4 sm:px-6 lg:border-t-0 xl:px-8 bg-teal-700">
        <dt class="text-sm font-medium leading-6 text-white">kWh Usage</dt>
        <dd class="text-xs font-medium text-rose-400">+54.02%</dd>
        <dd class="w-full flex-none text-3xl font-medium leading-10 tracking-tight text-white">1,872</dd>
        <dd class="text-xs font-medium text-white">Jan 10, 2024 - Feb 09, 2024</dd>
      </div>
    </dl>
  </div>

  <div class="mt-4">
    <div class="mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 lg:px-2 xl:px-2 space-x-2">
      <div class="col-span-2 flex items-baseline flex-wrap justify-between gap-y-2 gap-x-4 rounded-lg px-4 py-4 sm:px-6 border-t-2 border-b-2 xl:px-8 border-teal-400 bg-white">
       
      </div>
      <div class="flex items-baseline flex-wrap justify-between gap-y-2 gap-x-4 rounded-lg px-4 py-4 sm:px-6 lg:border-t-0 xl:px-8 bg-teal-700">
        <dt class="w-full text-sm font-medium leading-6 text-white">kWh Usage By Tiers</dt>
        <dd class="flex-none font-medium leading-6 tracking-tight text-white">1,872</dd>
        <dd class="text-xs font-medium text-white">Jan 10, 2024 - Feb 09, 2024</dd>
      </div>
    </div>
  </div>

  <div class="mx-auto flex w-full items-start gap-x-8 px-4 py-10 sm:px-6 lg:px-8">
    <aside class="sticky top-8 hidden w-44 shrink-0 lg:block">
      <!-- Left column area -->
      Side 1
    </aside>

    <main class="flex-1">
      <!-- Main area -->
      <% @intervals[:body][:intervals].each do |interval| %>
        <% interval[:readings].each do |reading| %>
          <p><%= reading[:start] %></p>
        <% end %>
      <% end %>
    </main>

    <aside class="sticky top-8 hidden w-96 shrink-0 xl:block">
      <!-- Right column area -->
      <% @bills[:body][:bills].each do |bill| %>
        <p><%= bill[:base][:bill_statement_date] %></p>
      <% end %>
    </aside>
  </div>
</div>

